<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../../css/reset.css">
    <link rel="stylesheet" type="text/css" href="../../css/navbar.css">
    <link rel="stylesheet" type="text/css" href="../../css/profile.css">
  </head>
<body>
<div id='navContainer'>
  <form id='searchform' action="/buy/search" method="get">
  <input id='searchbar' type="text" name="searchTerm" placeholder="Search">
  <input id='searchsubmit' type="submit" value="Search">
  </form>
  <ul>
    <li><a id='logo' href="/decide">BarGain</a></li>
    <li><a href="/sell">BarSell</a></li>
    <li><a href="/buy">BarBuy</a></li>
      <li><a href="/about">About</a></li>
    <li><a id='account' href="/users/profile">Account</a></li>
  </ul>
</div>

<div id='box'>
    <h1 id='header'>Hello <%= user.username %></h1>

    <form action="/auth?_method=DELETE" method="post">
      <input type="submit" value="Logout">
    </form>

    <h1 id='header'> Your Profile </h1>

    <h2>Things you want to Bar Sell: </h2> <br>
    <% myListings.forEach((listing) => { %>
      <div class="listingContainer">
        <p><%= listing.category %></p>
        <p><%= listing.title %></p>
        <p><%= listing.description %></p>
        <p><%= listing.price %></p>
        <p><%= listing.quantity %></p>
        <p><%= listing.tel %></p>
        <p><%= listing.email %></p>
        <a href="/sell/edit/<%= listing._id %>">Edit Listing</a>
        <form action="/sell/delete/<%= listing._id %>?_method=DELETE" method="post">
          <input type="submit" value="Delete">
        </form>

      </div>
    <% }) %>

    <h2>Things you want to Bar Buy: </h2>

    <% myFavorites.forEach((listing) => { %>
      <div class="listingContainer">
        <p><%= listing %></p>
        <a href="/buy/<%= listing %>" title="">A link to your listing</a>

      <form action="/favorites/delete/<%= listing %>?_method=DELETE" method="post">
          <input type="submit" value="Delete">
      </form>

      </div>
    <% }) %>

    <h1 id='header'>Either way, you're Bar Gain-ing every TIME!</h1>
</div>
  </body>
</html>
